@model IList<Escc.EastSussexGovUK.Umbraco.Guide.GuideNavigationLink>
<nav role="navigation" title="All pages in this section">
    <ol class="guide-nav">
        @{
            for (var i = 0; i < Model.Count; i++)
            {
                var itemClass = (i + 1 <= (Model.Count / 2 + Model.Count % 2)) ? "first-half" : "second-half";
                <li class="@itemClass">
                    <span class="step-number">@(i + 1).</span>
                    @if (Model[i].IsCurrentPage)
                    {
                        @Model[i].Text;
                    }
                    else
                    {
                        <a href="@Model[i].Url">@Model[i].Text</a>
                    }
                </li>
            }
        }
    </ol>
</nav>

