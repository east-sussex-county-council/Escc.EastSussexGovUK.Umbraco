@model Umbraco.Forms.Mvc.Models.FieldViewModel
@using ClientDependency.Core.Mvc
@using Umbraco.Forms.Mvc
@using System.Configuration
@{
    var className = Html.GetFormFieldClass(Model.FieldTypeName) + " text";
    Html.RequiresJs("~/js/forms-school.js");
}
<input type="text" 
       name="@Model.Name" 
       id="@Model.Id" 
       class="@className" 
       value="@Model.ValueAsHtmlString" 
       maxlength="500"
       autocomplete="off"
       data-autocomplete-schools-url="@ConfigurationManager.AppSettings["SchoolApiUrl"]"
       @{if(string.IsNullOrEmpty(Model.PlaceholderText) == false){<text>placeholder="@Model.PlaceholderText"</text>}}
       @{if(Model.Mandatory || Model.Validate){<text>data-val="true"</text>}}
       @{if (Model.Mandatory) {<text> data-val-required="@Model.RequiredErrorMessage"</text>}}
/>

<input type="hidden" name="@Model.Name" id="@Model.Id-school-code"/>
